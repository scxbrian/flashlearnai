# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/flashlearn-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Instasend Payment Integration
INSTASEND_PUBLIC_KEY=your-instasend-public-key
INSTASEND_SECRET_KEY=your-instasend-secret-key
INSTASEND_REDIRECT_URL=http://localhost:5173/payment-success
BACKEND_URL=http://localhost:3000

# AI Integration (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo

# Frontend URL
FRONTEND_URL=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100